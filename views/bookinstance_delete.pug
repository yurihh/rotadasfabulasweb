extends layout

block content
  style.
    @import url('https://fonts.googleapis.com/css2?family=Gochi+Hand&family=Poppins:wght@300;400&display=swap');
    h1 {
      font-family: 'Gochi Hand', cursive;
      color: #075d37;
      text-align: center;
      padding-top: 2rem;
    }
    .container {
      text-align: center;
      font-family: 'Poppins', serif;
    }
    label {
      font-family: 'Poppins', serif;
      color: #075d37;
      display: inline;
    }

    .btn.btn-primary {
      text-decoration: none;
      background-color: #A5C1A6;
      color: white;
      padding: 10px 20px;
      border-radius: 50px;
      border: none;
      font-family: 'Poppins', serif;
      margin: 0 auto;
      text-align: center;
    }
    .btn.btn-primary:hover {
      background-color: #075d37;
      color: white;
    }
    .form-control {
      border-radius: 10px;
      font-family: 'Poppins', serif;
      width: 20%;
      margin-right: 500px;
    }
    .btn {
      display: flex;
    }
    li {
          padding:5px;
        }
    .checkbox-input {
      margin: 0 auto;
      text-align: center;
    }
    .form-group {
      margin-left: 45%;
    }

  h1= title

  p #[strong Você realmente quer deletar esse exemplar de livro?]

  div(style="margin-left:20px")

    p #[strong ID]: #{bookinstance._id}

    p #[strong Titulo:]
      a(href=bookinstance.book.url) #{bookinstance.book.title}

    p #[strong Chancela:] #{bookinstance.imprint}

    p #[strong Status:]
      if bookinstance.status=='Available'
        span.text-success #{bookinstance.status}
      else if bookinstance.status=='Maintenance'
        span.text-danger #{bookinstance.status}
      else
        span.text-warning #{bookinstance.status}

    if bookinstance.status!='Available'
      p #[strong Data de devolução:] #{bookinstance.due_back_formatted}

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=bookinstance._id )

    button.btn.btn-primary(type='submit') Excluir